---
export interface Props {
  page: string;
}

import HeartIconURL from "../assets/icon-heart.svg";
import solidHeartIconURL from "../assets/icon-heart-solid.svg";

const { page = "1" } = Astro.props;

const response = await fetch(
  `https://api.themoviedb.org/3/movie/popular?api_key=${
    import.meta.env.SECRET_KEY
  }&language=en-US&page=${page}`
)
  .then((r) => r.json())
  .catch(function (error) {
    console.log(error);
  });

const movies = response.results;
const total_results = response.total_results;
const total_pages = response.total_pages;
---

<ul class="flex flex-wrap -m-4 min-h-screen transition-all justify-center">
  {
    movies.map((movie: any) => (
      <>
        <li class="p-4 md:w-1/4">
          <div class="block relative bg-white h-full border-2 border-gray-200 border-opacity-60 rounded-lg overflow-hidden hover:scale-110 transition-all">
            <a href={"/movie/" + movie.id} target="_blank" class="">
              <span>
                <img
                  src={"https://image.tmdb.org/t/p/w500" + movie.backdrop_path}
                  alt={"Poster of " + movie.original_title}
                />
              </span>
              <div class="p-2">
                <span>{movie.original_title} </span>
                <span>({movie.release_date})</span>
              </div>
            </a>
            <a
              href="#"
              class="block my-4 absolute top-[-.5rem] right-2 w-7 ml-auto transition-all rounded-full border-4 border-white bg-white"
              data-fav={movie.id}
              data-fav-title={movie.original_title}
              data-fav-thumb={movie.poster_path}
            >
              <img src={HeartIconURL} alt="Heart icon" class="w-8 hover:scale-125 transition-all" />
              <img
                src={solidHeartIconURL}
                alt="Heart icon"
                class="w-8 absolute hidden top-0 left-0 hover:scale-125 transition-all"
              />
            </a>
          </div>
        </li>
      </>
    ))
  }
</ul>
<div class="text-center p-6 mt-12">
  <strong class="block mb-3">
    {
      page !== "1" ? (
        <>
          <a href={"/movies/" + (parseInt(page) - 1)}>
            <span class="inline-block  mb-[-.33rem]">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                fill="none"
                viewBox="0 0 24 24"
                stroke-width="1.5"
                stroke="currentColor"
                class="w-6 h-6"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  d="M18.75 19.5l-7.5-7.5 7.5-7.5m-6 15L5.25 12l7.5-7.5"
                />
              </svg>
            </span>{" "}
            PREV{" "}
          </a>
          <span> |</span>
        </>
      ) : null
    }
    {
      page !== total_pages ? (
        <a href={"/movies/" + (parseInt(page) + 1)}>
          {" "}
          NEXT{" "}
          <span class="inline-block mb-[-.33rem]">
            {" "}
            <svg
              xmlns="http://www.w3.org/2000/svg"
              fill="none"
              viewBox="0 0 24 24"
              stroke-width="1.5"
              stroke="currentColor"
              class="w-6 h-6"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="M11.25 4.5l7.5 7.5-7.5 7.5m-6-15l7.5 7.5-7.5 7.5"
              />
            </svg>
          </span>
        </a>
      ) : null
    }
  </strong>
  <div class="text-sm">
    Page: {page} of {total_pages} ({total_results} Results).
  </div>
</div>
